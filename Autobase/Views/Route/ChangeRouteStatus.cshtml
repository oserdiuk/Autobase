@model Autobase.Models.EntityViewModels.ChangeStatusViewModel

@{
    ViewBag.Title = "Изменение статуса рейса";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Изменение статуса рейса @Model.RouteId @Model.RouteDirection</h4>
        <h5>Машина: @Model.CarModel @Model.CarNumber</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.CarId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.RouteId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.CarModel, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.CarNumber, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RouteStatusId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RouteStatusId, Model.RouteStatuses, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RouteStatusId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsIntegral, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsIntegral)
                    @Html.ValidationMessageFor(model => model.IsIntegral, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Изменить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
