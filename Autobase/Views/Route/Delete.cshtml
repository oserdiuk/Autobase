@model Autobase.Models.EntityViewModels.IndexRouteViewModel

@{
    ViewBag.Title = "Удаление рейса";
}

@if (Model == null)
{
    <span> Вы не можете удалить данный рейс, так как он в пути.</span>
    @Html.ActionLink("Назад", "Index")
}
else
{
    <h3>Вы уверены, что хотите удалить этот рейс?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.RouteId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RouteId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Direction)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Direction)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartureDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ArrivalDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CarNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CarNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CarName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CarName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RouteStatusName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RouteStatusName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Удалить" class="btn btn-default" /> |
                @Html.ActionLink("Назад", "Index")
            </div>
        }
    </div>
}